<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        >
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="45"
            >
            <shape android:shape="rectangle" >

                <solid android:color="#fff" />
                <size
                    android:width="50dp"
                    android:height="30dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>