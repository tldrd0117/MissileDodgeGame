<?xml version="1.0" encoding="utf-8"?>
<com.sungjae.missiledodge.ui.StarFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/starFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <TextView
        android:id="@+id/centerTV"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textColor="#fff"
        android:text="시작"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/scoreLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="8dp"
                android:src="@drawable/score_rock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dodgeScoreTV"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="36dp"
                android:textColor="#fff"
                android:text="0"
                android:layout_width="36dp"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/score_diamond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/diamondScoreTV"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:textColor="#fff"
                android:text="0"
                android:layout_width="36dp"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>


</com.sungjae.missiledodge.ui.StarFrameLayout>